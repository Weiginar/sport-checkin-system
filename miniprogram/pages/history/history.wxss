.page {
  min-height: 100vh;
  background: #f5f6fa;
}

/* Header */
.header-bg {
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  padding: 80rpx 40rpx 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
}

.nav-label {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  margin: 0 40rpx;
}

/* Body */
.body {
  padding: 30rpx;
  margin-top: -20rpx;
}

/* Calendar Card */
.calendar-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.weekday-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 12rpx;
}

.weekday-cell {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 12rpx 0;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
}

.date-cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  position: relative;
}

.date-num {
  font-size: 28rpx;
  color: #333;
}

.other-month .date-num {
  color: #ccc;
}

.today {
  background: #e8f5e9;
  border-radius: 50%;
}

.today .date-num {
  color: #185a9d;
  font-weight: bold;
}

.check-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #43cea2;
  position: absolute;
  bottom: 6rpx;
}

/* Section Title */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 32rpx 0 20rpx;
}

/* Record Card */
.record-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.record-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
}

.record-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.record-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.record-stats {
  text-align: right;
}

.record-duration {
  font-size: 28rpx;
  color: #43cea2;
  font-weight: 500;
}

.record-calories {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

/* Empty & Loading */
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx 0 60rpx;
  color: #bbb;
  font-size: 24rpx;
}
