<view class="container">
  <!-- Gradient top section -->
  <view class="header">
    <view class="header-content">
      <text class="title">创建账号</text>
      <text class="subtitle">加入悦动打卡，开始运动之旅</text>
    </view>
  </view>

  <!-- Register card -->
  <view class="card">
    <view class="input-group">
      <view class="input-wrapper">
        <image class="input-icon" src="/images/user.png" mode="aspectFit" />
        <input
          class="input"
          placeholder="用户名（4-20个字符）"
          placeholder-class="placeholder"
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
      <view class="input-wrapper">
        <image class="input-icon" src="/images/lock.png" mode="aspectFit" />
        <input
          class="input"
          placeholder="密码（6-20个字符）"
          placeholder-class="placeholder"
          password="{{true}}"
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      <view class="input-wrapper">
        <image class="input-icon" src="/images/lock.png" mode="aspectFit" />
        <input
          class="input"
          placeholder="确认密码"
          placeholder-class="placeholder"
          password="{{true}}"
          value="{{confirmPassword}}"
          bindinput="onConfirmPasswordInput"
        />
      </view>
      <view class="input-wrapper">
        <image class="input-icon" src="/images/user.png" mode="aspectFit" />
        <input
          class="input"
          placeholder="昵称（选填）"
          placeholder-class="placeholder"
          value="{{nickname}}"
          bindinput="onNicknameInput"
        />
      </view>
    </view>

    <button class="btn-register" bindtap="onRegister">注册</button>

    <view class="login-link" bindtap="goLogin">
      <text class="link-text">已有账号？</text>
      <text class="link-highlight">去登录</text>
    </view>
  </view>
</view>
