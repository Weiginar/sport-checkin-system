.page {
  min-height: 100vh;
  background: #f5f6fa;
}

/* Header */
.header-bg {
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  padding: 80rpx 40rpx 50rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

/* Body */
.body {
  padding: 30rpx;
  margin-top: -10rpx;
}

/* Card */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* Sport Horizontal Scroll */
.sport-scroll {
  white-space: nowrap;
  width: 100%;
}

.sport-scroll-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  border: 3rpx solid transparent;
  background: #f8f9fc;
  transition: all 0.2s;
}

.sport-scroll-item.active {
  border-color: #185a9d;
  background: #e8f0fe;
}

.scroll-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.scroll-name {
  font-size: 24rpx;
  color: #555;
}

.sport-scroll-item.active .scroll-name {
  color: #185a9d;
  font-weight: bold;
}

/* Form Rows */
.form-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
}

.form-value {
  display: flex;
  align-items: baseline;
}

.duration-num {
  font-size: 44rpx;
  font-weight: bold;
  color: #f5af19;
  margin-right: 8rpx;
}

.form-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.duration-slider {
  margin: 0 -8rpx 16rpx;
}

.form-input-wrap {
  display: flex;
  align-items: center;
}

.form-input {
  width: 140rpx;
  text-align: right;
  font-size: 32rpx;
  color: #333;
  border-bottom: 2rpx solid #eee;
  padding: 4rpx 0;
}

/* Remark */
.remark-row {
  margin-top: 8rpx;
}

.remark-input {
  width: 100%;
  height: 140rpx;
  font-size: 26rpx;
  color: #333;
  background: #f8f9fc;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

/* Submit Button */
.btn-submit {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
  color: #fff;
  font-size: 44rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(245, 175, 25, 0.4);
  letter-spacing: 4rpx;
}

.btn-submit:active {
  opacity: 0.85;
  transform: scale(0.97);
}

.btn-submit.disabled {
  background: linear-gradient(135deg, #ccc 0%, #aaa 100%);
  box-shadow: none;
  pointer-events: none;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 580rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 60rpx 48rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-icon {
  font-size: 96rpx;
  margin-bottom: 16rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.modal-info {
  width: 100%;
  margin-bottom: 36rpx;
}

.modal-row {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-row:last-child {
  border-bottom: none;
}

.modal-label {
  font-size: 28rpx;
  color: #888;
}

.modal-val {
  font-size: 28rpx;
  font-weight: bold;
  color: #185a9d;
}

.modal-val.achievement {
  color: #f5af19;
}

.modal-btn {
  width: 100%;
  text-align: center;
  padding: 24rpx 0;
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
}

.modal-btn:active {
  opacity: 0.85;
}
