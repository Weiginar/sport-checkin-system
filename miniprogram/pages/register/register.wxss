.container {
  min-height: 100vh;
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Header gradient */
.header {
  width: 100%;
  height: 35vh;
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 6rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* Card */
.card {
  width: 85%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx 48rpx;
  margin-top: -80rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-group {
  width: 100%;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 18rpx 0;
  margin-bottom: 16rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  height: 56rpx;
}

.placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}

/* Button */
.btn-register {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  margin-top: 36rpx;
  letter-spacing: 8rpx;
}

.btn-register::after {
  border: none;
}

/* Login link */
.login-link {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
}

.link-text {
  font-size: 26rpx;
  color: #999;
}

.link-highlight {
  font-size: 26rpx;
  color: #43cea2;
  font-weight: bold;
  margin-left: 4rpx;
}
