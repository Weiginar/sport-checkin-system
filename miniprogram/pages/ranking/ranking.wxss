.page {
  min-height: 100vh;
  background: #f5f6fa;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Tab Bar */
.tab-bar {
  display: flex;
  background: #fff;
  padding: 0 60rpx;
  justify-content: center;
  gap: 80rpx;
}

.tab-item {
  position: relative;
  padding: 28rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-text {
  font-size: 30rpx;
  color: #999;
}

.tab-active .tab-text {
  color: #185a9d;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #43cea2, #185a9d);
  border-radius: 3rpx;
}

/* Top 3 Area */
.top3-area {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(180deg, #fff 0%, #f5f6fa 100%);
}

.top3-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  position: relative;
}

.top3-item.gold {
  margin-bottom: 30rpx;
}

.top3-rank-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: -10rpx;
  right: 50rpx;
  z-index: 2;
}

.gold-bg {
  background: linear-gradient(135deg, #f7971e, #ffd200);
}

.silver-bg {
  background: linear-gradient(135deg, #bdc3c7, #95a5a6);
}

.bronze-bg {
  background: linear-gradient(135deg, #e67e22, #d35400);
}

.top3-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #e0e0e0;
  margin-bottom: 12rpx;
}

.top3-avatar-first {
  width: 150rpx;
  height: 150rpx;
  border-color: #ffd200;
  border-width: 8rpx;
}

.gold .top3-avatar {
  border-color: #ffd200;
}

.silver .top3-avatar {
  border-color: #bdc3c7;
}

.bronze .top3-avatar {
  border-color: #e67e22;
}

.top3-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.top3-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* Rank List */
.rank-list {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-item-me {
  background: rgba(24, 90, 157, 0.06);
}

.rank-num {
  width: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #999;
  text-align: center;
  flex-shrink: 0;
}

.rank-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.rank-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-count {
  font-size: 26rpx;
  color: #185a9d;
  font-weight: bold;
  flex-shrink: 0;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Bottom Fixed Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.bottom-text {
  font-size: 30rpx;
  color: #185a9d;
  font-weight: bold;
}
