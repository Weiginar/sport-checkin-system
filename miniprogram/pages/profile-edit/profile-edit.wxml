<view class="page">
  <!-- Avatar -->
  <view class="form-card">
    <view class="avatar-section" bindtap="chooseAvatar">
      <image class="avatar" src="{{avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <text class="avatar-tip">点击更换头像</text>
    </view>

    <!-- Nickname -->
    <view class="form-item">
      <text class="form-label">昵称</text>
      <input class="form-input" placeholder="请输入昵称" value="{{nickname}}" bindinput="onNicknameInput" maxlength="20" />
    </view>

    <!-- Phone -->
    <view class="form-item">
      <text class="form-label">手机号</text>
      <input class="form-input" placeholder="请输入手机号" type="number" value="{{phone}}" bindinput="onPhoneInput" maxlength="11" />
    </view>

    <!-- Gender -->
    <view class="form-item form-item-last">
      <text class="form-label">性别</text>
      <radio-group class="radio-group" bindchange="onGenderChange">
        <label class="radio-label {{gender === '男' ? 'radio-active' : ''}}">
          <radio value="男" checked="{{gender === '男'}}" color="#4facfe" />
          <text>男</text>
        </label>
        <label class="radio-label {{gender === '女' ? 'radio-active' : ''}}">
          <radio value="女" checked="{{gender === '女'}}" color="#4facfe" />
          <text>女</text>
        </label>
        <label class="radio-label {{gender === '保密' ? 'radio-active' : ''}}">
          <radio value="保密" checked="{{gender === '保密'}}" color="#4facfe" />
          <text>保密</text>
        </label>
      </radio-group>
    </view>
  </view>

  <!-- Save Button -->
  <view class="save-btn" bindtap="onSave">保存</view>
</view>
