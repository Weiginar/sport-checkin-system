.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

/* Form Card */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* Avatar */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 36rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #e0e0e0;
}

.avatar-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #4facfe;
}

/* Form Items */
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item-last {
  border-bottom: none;
}

.form-label {
  width: 140rpx;
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

/* Radio Group */
.radio-group {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.radio-active text {
  color: #4facfe;
}

/* Save Button */
.save-btn {
  margin-top: 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  letter-spacing: 4rpx;
}

.save-btn:active {
  opacity: 0.85;
}
