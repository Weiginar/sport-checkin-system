.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* Header */
.header {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 60rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.user-section {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  background: #e0e0e0;
}

.nickname {
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.points-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.points-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.points-num {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-right: 6rpx;
}

.points-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* Stats Card */
.stats-card {
  display: flex;
  margin: -30rpx 24rpx 24rpx;
  padding: 32rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 2;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #f0f0f0;
}

.stats-item:last-child {
  border-right: none;
}

.stats-num {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.stats-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* Menu Card */
.menu-card {
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item-last {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* Logout */
.logout-btn {
  margin: 40rpx 24rpx 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #e74c3c;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.logout-btn:active {
  opacity: 0.8;
}
