.page {
  min-height: 100vh;
  background: #f5f6fa;
}

/* Header */
.header-bg {
  background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}

.header-count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 12rpx;
}

/* Body */
.body {
  padding: 30rpx;
  margin-top: -20rpx;
}

/* Achievement Grid */
.achievement-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.achievement-item {
  width: 31%;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.achievement-item.unlocked {
  box-shadow: 0 4rpx 16rpx rgba(247, 151, 30, 0.15);
}

.achievement-item.locked {
  opacity: 0.75;
}

.badge-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.badge-active {
  background: linear-gradient(135deg, #ffd200 0%, #f7971e 100%);
}

.badge-gray {
  background: #e0e0e0;
}

.badge-icon {
  font-size: 44rpx;
}

.badge-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 8rpx;
}

.badge-sub {
  font-size: 20rpx;
  color: #999;
}

.badge-condition {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  margin-bottom: 10rpx;
}

/* Progress Bar */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #eee;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #f7971e, #ffd200);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 18rpx;
  color: #bbb;
}

/* Popup */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.popup-content {
  width: 600rpx;
  background: #fff;
  border-radius: 28rpx;
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popup-badge {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.popup-icon {
  font-size: 64rpx;
}

.popup-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.popup-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.popup-divider {
  width: 100%;
  height: 1rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

.popup-info-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.popup-label {
  font-size: 26rpx;
  color: #999;
}

.popup-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.points-color {
  color: #2ecc71;
}

.popup-close {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-close-text {
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
