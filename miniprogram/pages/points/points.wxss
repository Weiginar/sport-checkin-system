.page {
  min-height: 100vh;
  background: #f5f6fa;
}

/* Header */
.header-bg {
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

.total-points {
  font-size: 96rpx;
  font-weight: bold;
  color: #fff;
  margin: 16rpx 0 8rpx;
  line-height: 1;
}

.header-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.65);
}

/* Body */
.body {
  padding: 30rpx;
  margin-top: -20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* Record List */
.record-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f0f7ff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.record-icon {
  font-size: 36rpx;
}

.record-middle {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.record-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.record-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.record-right {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.record-points {
  font-size: 32rpx;
  font-weight: bold;
}

.points-add {
  color: #2ecc71;
}

.points-sub {
  color: #e74c3c;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Loading */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}
