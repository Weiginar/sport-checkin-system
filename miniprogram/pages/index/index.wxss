.page {
  min-height: 100vh;
  background: #f5f6fa;
}

/* Header */
.header-bg {
  background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
  padding: 80rpx 40rpx 60rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.app-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.greeting {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

/* Body */
.body {
  padding: 30rpx;
  margin-top: -20rpx;
}

/* Card */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* Status Card - Not Checked In */
.status-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.status-text {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-sub {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.btn-checkin {
  background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  padding: 24rpx 100rpx;
  border-radius: 50rpx;
  text-align: center;
}

.btn-checkin:active {
  opacity: 0.85;
}

/* Status Card - Checked In */
.status-done {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.done-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.done-info {
  display: flex;
  flex-direction: column;
}

.done-sport {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.done-details {
  font-size: 26rpx;
  color: #888;
  margin-top: 6rpx;
}

.dot {
  margin: 0 8rpx;
}

/* Stats Row */
.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-card:first-child {
  margin-left: 0;
}

.stat-card:last-child {
  margin-right: 0;
}

.stat-num {
  font-size: 44rpx;
  font-weight: bold;
  color: #185a9d;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* Sport Grid */
.sport-grid {
  display: flex;
  flex-wrap: wrap;
}

.sport-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.sport-icon {
  width: 96rpx;
  height: 96rpx;
  background: #f0f7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-bottom: 10rpx;
}

.sport-name {
  font-size: 24rpx;
  color: #555;
}

.sport-item:active .sport-icon {
  background: #d6eaff;
}
